{% if not attributes %}
<fieldset class="form-item form-item--radio">
  <legend class="form-item__label">Options as Radio Buttons</legend>
  <ul class="form-item--radios">

    {% for key, radio in radios %}
      {% include "@atoms/forms/radio/_radio-item.twig" with {
        radio_item: radio.title,
        radio_item_checked: radio.checked
      } %}
    {% endfor %}
  </ul>
</fieldset>

<fieldset class="form-item form-item--radio form-item--error">
  <legend class="form-item__label">Options as Radio Buttons</legend>
  <ul class="form-item--radios">
    {% for key, radio in radios %}
      {% include "@atoms/forms/radio/_radio-item.twig" with {
        radio_item: radio.title,
        radio_item_checked: radio.checked,
        key_suffix: '2'
      } %}
    {% endfor %}
  </ul>
</fieldset>
{% endif %}
