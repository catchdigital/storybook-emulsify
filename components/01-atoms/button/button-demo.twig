{% for group in groups %}
  <div class="button-group">
    {% include "@atoms/text/headings/_heading.twig" with {
      heading: group.title,
      heading_level: 1,
      heading_size_override: 'small'
    } %}

    {% for type in group.items %}
    <div style="margin-bottom: 2rem;">
        {% include "@atoms/button/button.twig" with {
          button_content: type.title|capitalize,
          button_icon: type.button_icon,
          button_modifiers: group.modifiers|default([]),
        } %}
      </div>

    {% endfor %}
</div>
{% endfor %}
