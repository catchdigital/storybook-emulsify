{#
# Available variables:
# - accordion__base_class - base classname of the wrapper.
# - accordion__modifiers - array of modifiers to add to the base classname of the wrapper.
# - accordion__blockname - blockname prepended to the base classname of the wrapper(s) and each component.
#
# - accordion__title - The sidebar heading
#
# Available blocks:
# - accordion_content
#
#}
{{ attach_library('theme_name/accordion') }}
{% set accordion__base_class = 'accordion' %}
{% set accordion__extra_classes = accordion__extra_classes|default([])|merge(['js-accordion']) %}
{% for item in accordionItems %}
  {% embed "@molecules/accordion/accordion.twig" with {
    accordion__title: item.title,
  } %}
    {% block accordion_content %}
      {{ item.content }}
    {% endblock %}
  {% endembed %}
{% endfor %}

